{
    "name": "@arpadroid/messages",
    "version": "0.0.1",
    "description": "A library of web components for showing user messages and notifications.",
    "exports": "./dist/arpadroid-messages.js",
    "module": "./dist/arpadroid-messages.js",
    "type": "module",
    "scripts": {
        "build": "node ./node_modules/@arpadroid/arpadroid/scripts/build-project.mjs --project=messages --minify",
        "build:prod": "npm run build -- --mode=production",
        "build:watch": "npm run build -- --watch",
        "build:watch:slim": "npm run build -- --watch --slim",
        "build:slim": "npm run build -- --slim",
        "prepublish": "npm run build",
        "storybook:build": "storybook build",
        "storybook:test": "test-storybook",
        "storybook": "npm run build -- --watch & npm run storybook:only",
        "storybook:only": "storybook dev -p 6010",
        "test": "npm run storybook:test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/arpadroid/messages.git"
    },
    "keywords": [
        "web-components",
        "messages",
        "notifications",
        "library"
    ],
    "author": "Andres Vaquero @arpadroid <web.andresvaquero@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/arpadroid/messages/issues"
    },
    "homepage": "https://github.com/arpadroid/messages#readme",
    "devDependencies": {
        "@arpadroid/arpadroid": "../arpadroid",
        "@arpadroid/stylesheet-bundler": "file:../stylesheet-bundler",
        "@babel/core": "^7.23.9",
        "@babel/plugin-syntax-import-assertions": "^7.23.3",
        "@babel/preset-env": "^7.23.9",
        "@chromatic-com/storybook": "^1.4.0",
        "@storybook/addon-a11y": "^8.1.1",
        "@storybook/addon-essentials": "^8.1.1",
        "@storybook/addon-interactions": "^8.1.1",
        "@storybook/addon-links": "^8.1.1",
        "@storybook/addon-webpack5-compiler-swc": "^1.0.2",
        "@storybook/blocks": "^8.1.1",
        "@storybook/cli": "^8.1.1",
        "@storybook/test": "^8.1.1",
        "@storybook/test-runner": "^0.18.1",
        "@storybook/web-components": "^8.1.1",
        "@storybook/web-components-webpack5": "^8.1.1",
        "babel-jest": "^29.7.0",
        "babel-loader": "^9.1.3",
        "dts-bundle-generator": "^9.3.1",
        "install": "^0.13.0",
        "jsdoc-to-markdown": "^8.0.1",
        "lit": "^3.1.3",
        "npm": "^10.8.1",
        "rollup": "^4.18.0",
        "storybook": "^8.1.1",
        "typescript": "^5.4.2"
    },
    "peerDependencies": {
        "@arpadroid/application": "file:../application",
        "@arpadroid/lists": "file:../lists",
        "@arpadroid/tools": "file:../tools",
        "@arpadroid/ui": "file:../ui"
    }
}
